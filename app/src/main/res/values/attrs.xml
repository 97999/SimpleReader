        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="MyBottomView">
        <attr name="default_text_color" format="color"/>
        <attr name="process_color" format="color"/>
        <attr name="default_ic" format="integer"/>
        <attr name="pitch_ic" format="integer"/>
        <attr name="text_size" format="integer"/>
        <attr name="default_state" format="boolean"/>
